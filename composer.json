{
    "name": "Php Slim React Redux BoilerPlate",
    "description": "A simple boilerplate",
    "keywords": ["microframework", "rest", "router", "psr7", "react", "php", "slip", "react-router", "redux"],
    "homepage": "https://github.com/raheemazeezabiodun/Php-Slim-React_Redux-Base/",
    "license": "MIT",
    "authors": [
        {
            "name": "Raheem Azeez Abiodun",
            "email": "raheemazeez4@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "illuminate/database": "~5.1"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S 0.0.0.0:8080 -t public public/index.php",
        "test": "phpunit"
    }

}
